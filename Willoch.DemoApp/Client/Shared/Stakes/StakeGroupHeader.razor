
<div class="is-flex flex-direction-row is-flex-wrap-wrap is-justify-content-space-between">
    <div class="is-flex mr-6">
        <span class="stakeable symbol">token</span>&nbsp;
        <span class="sum staked stakeable">0</span>
    </div>
    <div class="is-flex mr-6">
        <span class="fiat symbol"></span>&nbsp;
        <span class="sum staked fiat">0</span>
    </div>
    <div class="is-flex mr-6 is-tiles is-expanded">
        <a title="Display stakes as rows in a table" onclick="javascript:App.showTableClicked(event);return false;">
            <span class="icon">
                <i class="fas fa-list" aria-hidden="true"></i>
            </span>
        </a>
    </div>
    <div class="is-flex mr-6 is-list is-expanded">
        <a title="Display stakes as tiles" onclick="javascript:App.showTilesClicked(event);return false;">
            <span class="icon">
                <i class="fas fa-th-large" aria-hidden="true"></i>
            </span>
        </a>
    </div>
    <div class="is-flex mr-6 is-expanded">
        <a onclick="javascript:App.collapseClicked(event);return false;">
            <span class="icon">
                <i class="fas fa-angle-up" aria-hidden="true"></i>
            </span>
        </a>
    </div>
    <div class="is-flex mr-6 is-collapsed">
        <a onclick="javascript:App.expandClicked(event);return false;">
            <span class="icon">
                <i class="fas fa-angle-down" aria-hidden="true"></i>
            </span>
        </a>
    </div>  
</div>
